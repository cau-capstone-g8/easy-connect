<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/button_round"
    android:layout_marginTop="30dp"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:id="@+id/layout_photoCard_item">

    <ImageView
        android:id="@+id/photo_of_post_round"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        android:background="@drawable/photo_round"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/name_of_post"
        app:srcCompat="@drawable/drawable_empty"
        />

    <ImageView
        android:id="@+id/photo_of_post"
        android:layout_width="86dp"
        android:layout_height="86dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="27dp"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:srcCompat="@drawable/drawable_noicon"
        />

    <TextView
        android:id="@+id/date_of_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:text="123"
        android:textSize="14dp"/>

    <TextView
        android:id="@+id/name_of_post"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/photo_of_post_round"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="123"
        android:textSize="18dp"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/new_alarm"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/photo_of_post_round"
        app:srcCompat="@drawable/empty"
        />


</androidx.constraintlayout.widget.ConstraintLayout>