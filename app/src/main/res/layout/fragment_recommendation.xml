<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Recommendation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_age"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:textColor="@color/hardgray"
            android:textStyle="bold"
            android:textSize="22dp"
            android:text="★ 관심 나눔 ★"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_margin="10dp">
                <Button
                    android:id="@+id/btn_age1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:padding="5dp"
                    android:background="@drawable/button_keyword_round"/>
                <Button
                    android:id="@+id/btn_age2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:padding="5dp"
                    android:background="@drawable/button_keyword_round"/>
                <Button
                    android:id="@+id/btn_age3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:padding="5dp"
                    android:background="@drawable/button_keyword_round"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_margin="10dp">
                <Button
                    android:id="@+id/btn_age4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:padding="5dp"
                    android:background="@drawable/button_keyword_round"/>
                <Button
                    android:id="@+id/btn_age5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:padding="5dp"
                    android:background="@drawable/button_keyword_round"/>
                <Button
                    android:id="@+id/btn_age6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:padding="5dp"
                    android:background="@drawable/button_keyword_round"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_margin="10dp">
                <Button
                    android:id="@+id/btn_gender1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:padding="5dp"
                    android:background="@drawable/button_keyword_round"/>
                <Button
                    android:id="@+id/btn_gender2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:padding="5dp"
                    android:background="@drawable/button_keyword_round"/>
                <Button
                    android:id="@+id/btn_gender3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:padding="5dp"
                    android:background="@drawable/button_keyword_round"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_star"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:textColor="@color/hardgray"
            android:textStyle="bold"
            android:textSize="22dp"
            android:text="★ 인플루언서 ★"/>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:rowCount="2">

            <ImageView
                android:id="@+id/img_influencer1"
                android:layout_margin="3dp"
                android:layout_width="115dp"
                android:layout_height="115dp"
                android:layout_alignParentLeft="true"
                android:scaleType="fitXY"/>

            <ImageView
                android:id="@+id/img_influencer2"
                android:layout_margin="3dp"
                android:layout_width="115dp"
                android:layout_height="115dp"
                android:layout_toLeftOf="@+id/img_influencer3"
                android:layout_toRightOf="@+id/img_influencer1"
                android:scaleType="fitXY"/>

            <ImageView
                android:id="@+id/img_influencer3"
                android:layout_margin="3dp"
                android:layout_width="115dp"
                android:layout_height="115dp"
                android:layout_alignParentRight="true"
                android:scaleType="fitXY"/>

            <TextView
                android:id="@+id/txt_influencer1"
                android:layout_margin="3dp"
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="18dp"
                android:layout_alignParentLeft="true"
                android:scaleType="fitXY"/>

            <TextView
                android:id="@+id/txt_influencer2"
                android:layout_margin="3dp"
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="18dp"
                android:layout_toLeftOf="@+id/txt_influencer3"
                android:layout_toRightOf="@+id/txt_influencer1"
                android:scaleType="fitXY"/>

            <TextView
                android:id="@+id/txt_influencer3"
                android:layout_margin="3dp"
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="18dp"
                android:layout_alignParentRight="true"
                android:scaleType="fitXY"/>
        </GridLayout>

    </LinearLayout>

</RelativeLayout>