<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Page_menu">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            >
            <ImageButton
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:id="@+id/bt_goback"
                android:background="#00FF0000"
                android:padding="10dp"
                android:src="@drawable/backicon"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/hardgray"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textColor="@color/hardgray"
                android:textStyle="bold"
                android:textSize="27dp"
                android:layout_marginLeft="20dp"
                android:text="메뉴"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bt_mypage"
                android:layout_marginTop="90dp"
                android:layout_marginLeft="30dp"
                android:background="#00FF0000"
                android:drawableLeft="@drawable/drawable_mypage"
                android:textSize="20dp"
                android:text="   마이 페이지"
                >
            </Button>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bt_find_friend"
                android:layout_marginTop="100dp"
                android:layout_marginLeft="30dp"
                android:background="#00FF0000"
                android:drawableLeft="@drawable/drawable_friends"
                android:textSize="20dp"
                android:text="   새 친구 찾기"
                >
            </Button>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bt_logout"
                android:layout_marginTop="100dp"
                android:layout_marginLeft="30dp"
                android:background="#00FF0000"
                android:drawableLeft="@drawable/drawable_logout"
                android:textSize="20dp"
                android:text="   로그아웃"
                >
                // 버튼눌리면 알림메시지 띄워서 비밀번호 재입력 받고 탈퇴하게끔
            </Button>

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>